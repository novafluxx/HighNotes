SUPABASE_URL=http://127.0.0.1:54321
# Copy the publishable key shown in `pnpx supabase status -o env`
SUPABASE_KEY=sb_publishable_your_local_key
# Edge functions and server utilities expect the same publishable key
SUPABASE_ANON_KEY=${SUPABASE_KEY}
# Copy the secret key shown in `pnpx supabase status -o env`
SUPABASE_SERVICE_ROLE_KEY=sb_secret_your_local_key
# Optional: explicitly set if your frontend uses a dedicated publishable key env
EDGE_SUPABASE_PUBLISHABLE_KEY=${SUPABASE_KEY}

# Edge Function Environment Variables (set via Supabase CLI or Dashboard)
# ALLOWED_ORIGINS - Comma-separated list of allowed CORS origins for edge functions
# Example: ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com,http://localhost:3000